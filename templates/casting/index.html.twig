{% extends 'base.html.twig' %}

{% block title %}Film casts{% endblock %}

{% block body %}
 
   <h2>Film casts</h2>

   <a class="btn btn-success" href="{{path('add_casting')}}">Add cast</a>

    <table class="table table-hover">  
        {%for casting in castings %}
            <tr>
                <td>{{casting.film}}</td>
                <td>{{casting.role}}</td>
                <td>{{casting.actor}}</td>
            </tr>  
        {%endfor%}
    </table>

{% endblock %}

